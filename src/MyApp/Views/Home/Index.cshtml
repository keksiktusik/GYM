@model MyApp.Models.Person
@{
    ViewData["Title"] = "Kalkulator BMI";
}
<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Index" method="post" class="row g-3">
        @Html.AntiForgeryToken()
        <div class="col-md-6">
            <label asp-for="HeightCm" class="form-label"></label>
            <input asp-for="HeightCm" class="form-control" type="number" step="0.1" min="1" />
            <span asp-validation-for="HeightCm" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="WeightKg" class="form-label"></label>
            <input asp-for="WeightKg" class="form-control" type="number" step="0.1" min="1" />
            <span asp-validation-for="WeightKg" class="text-danger"></span>
        </div>
        <div class="col-12">
            <button class="btn btn-primary">Oblicz BMI</button>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
