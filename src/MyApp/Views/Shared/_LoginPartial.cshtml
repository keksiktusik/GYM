@using Microsoft.AspNetCore.Identity
@inject SignInManager<MyApp.Models.ApplicationUser> SignInManager
@inject UserManager<MyApp.Models.ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link">Witaj, @User.Identity?.Name</span>
        </li>

        @if (User.IsInRole("Administrator"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Index">Panel admina</a>
            </li>
        }
        else if (User.IsInRole("Klient"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Client" asp-action="Index">Panel klienta</a>
            </li>
        }

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Wyloguj</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
        </li>
    }
</ul>
