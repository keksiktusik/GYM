        display: flex;
        gap: 25px;
    }

    .sidebar {
        width: 280px;
        background: #ffe9f3;
        border-radius: 20px;
        padding: 20px;
        height: fit-content;
        box-shadow: 0 3px 10px rgba(255, 192, 203, 0.3);
    }

    .sidebar h4 {
        color: #d63384;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .stat-box {
