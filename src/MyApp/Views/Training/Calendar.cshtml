        border-radius: 15px;
        padding: 12px 15px;
        margin-bottom: 10px;
        border-left: 5px solid #ff8bb3;
    }

    /* --- FullCalendar styl --- */
    #calendar {
        flex-grow: 1;
        background: white;
        padding: 20px;
        border-radius: 20px;
        box-shadow: 0 3px 10px rgba(255, 192, 203, 0.25);
    }

    /* Ikony typ√≥w */
    .icon-cardio { color: #ff6f91; }
    .icon-silowy { color: #6fa3ff; }
    .icon-stretch { color: #c77dff; }
    .icon-grupowy { color: #ffd166; }
    .icon-inne { color: #adb5bd; }
</style>

