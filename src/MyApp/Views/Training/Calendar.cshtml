            <div class="stat-box">
                üîú Najbli≈ºszy trening:<br />
                <strong id="nextTraining">≈Åadowanie...</strong>
            </div>

            <div class="stat-box">
                üîÅ Cykliczne plany:<br />
                <strong id="cycleCount">0</strong>
            </div>

            <div class="stat-box">
                üóì Treningi w tym miesiƒÖcu:<br />
                <strong id="monthCount">0</strong>
            </div>

            <h4 class="mt-4">üè∑ Typy trening√≥w</h4>

            <p><span class="icon-cardio">‚ù§Ô∏è</span> Cardio</p>
            <p><span class="icon-silowy">üí™</span> Trening si≈Çowy</p>
            <p><span class="icon-stretch">üßò</span> Stretching</p>
            <p><span class="icon-grupowy">üë•</span> Zajƒôcia grupowe</p>
            <p><span class="icon-inne">‚≠ê</span> Inne</p>

        </div>

        <!-- =======================
             PRAWA STRONA ‚Äì KALENDARZ
        =========================== -->
        <div id="calendar"></div>

    </div>

    <!-- =======================
         LISTA CYKLICZNYCH PLAN√ìW
    =========================== -->
    <div class="container mt-5">
        <h3 class="text-pink fw-bold">üîÅ Twoje cykliczne plany</h3>
        <div id="recurringList" class="mt-3">
            <p class="text-muted">≈Åadowanie...</p>
        </div>
    </div>

</div>

<!-- ==========================
     MODAL ‚Äì DODAWANIE TRENINGU
============================== -->
<div class="modal fade" id="calendarAddEventModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="addEventForm">
        <div class="modal-header">
          <h5 class="modal-title">Dodaj trening</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">

          <div class="mb-2">
            <label class="form-label">Data i godzina rozpoczƒôcia</label>
            <input type="datetime-local" name="Start" class="form-control" required />
          </div>

          <div class="mb-2">
            <label class="form-label">Data i godzina zako≈Ñczenia</label>
            <input type="datetime-local" name="End" class="form-control" required />
          </div>

          <div class="mb-2">
            <label class="form-label">Typ treningu</label>
            <select name="Title" class="form-select">
              <option value="Cardio">Cardio ‚ù§Ô∏è</option>
              <option value="Trening si≈Çowy">Trening si≈Çowy üí™</option>
              <option value="Stretching">Stretching üßò</option>
              <option value="Zajƒôcia grupowe">Zajƒôcia grupowe üë•</option>
              <option value="Inne">Inne ‚≠ê</option>
            </select>
          </div>

          <div class="mb-2">
            <label class="form-label">Opis</label>
            <textarea name="Description" class="form-control" rows="2"></textarea>
          </div>

          <!-- Cykliczny -->
          <div class="form-check my-3">
              <input class="form-check-input" type="checkbox" id="isRecurring" />
              <label class="form-check-label fw-bold">Cykliczny trening</label>
          </div>

          <div id="recurrenceOptions" class="p-3 border rounded" style="display:none; background:#fff0f6;">
              <label class="fw-bold">Czƒôstotliwo≈õƒá:</label>
              <select id="recurrenceInterval" class="form-select border-pink">
                  <option value="Daily">Codziennie</option>
                  <option value="Weekly">Co tydzie≈Ñ</option>
                  <option value="Monthly">Co miesiƒÖc</option>
              </select>

              <label class="mt-2 fw-bold">Dni tygodnia:</label>
              <div class="d-flex gap-3 flex-wrap ms-2">
                  <label><input type="checkbox" class="weekday" value="Mon" /> Pon</label>
                  <label><input type="checkbox" class="weekday" value="Tue" /> Wt</label>
                  <label><input type="checkbox" class="weekday" value="Wed" /> ≈ör</label>
                  <label><input type="checkbox" class="weekday" value="Thu" /> Czw</label>
                  <label><input type="checkbox" class="weekday" value="Fri" /> Pt</label>
                  <label><input type="checkbox" class="weekday" value="Sat" /> Sob</label>
                  <label><input type="checkbox" class="weekday" value="Sun" /> Niedz</label>
              </div>

              <label class="mt-3 fw-bold">Powtarzaj do:</label>
              <input type="date" id="recurrenceEndDate" class="form-control border-pink" />
          </div>

        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-pink">Zapisz</button>
        </div>

      </form>
    </div>
  </div>
</div>
<div class="modal fade" id="editEventModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="editEventForm">
        <div class="modal-header">
          <h5 class="modal-title">Edytuj trening</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" id="editEventId" name="Id"/>

          <div class="mb-2">
            <label>Tytu≈Ç</label>
            <input id="editTitle" name="Title" class="form-control"/>
          </div>

          <div class="mb-2">
            <label>Opis</label>
            <textarea id="editDescription" name="Description" class="form-control"></textarea>
          </div>

          <div class="mb-2">
            <label>Start</label>
            <input id="editStart" name="Start" type="datetime-local" class="form-control"/>
          </div>

          <div class="mb-2">
            <label>Koniec</label>
            <input id="editEnd" name="End" type="datetime-local" class="form-control"/>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger" onclick="deleteSingleEvent()">Usu≈Ñ</button>
          <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- FullCalendar JS -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/main.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', async function () {

    // üîÑ Pokazywanie/ukrywanie sekcji cykliczno≈õci
    document.getElementById("isRecurring").addEventListener("change", function () {
        document.getElementById("recurrenceOptions").style.display =
            this.checked ? "block" : "none";
    });

    // ====================================
    // 1Ô∏è‚É£ FULLCALENDAR
    // ====================================
    var calendar = new FullCalendar.Calendar(document.getElementById('calendar'), {
        initialView: 'dayGridMonth',
        selectable: true,
        events: '/Training/GetEvents',

        dateClick: function(info) {
            const modal = new bootstrap.Modal(document.getElementById('calendarAddEventModal'));
            document.querySelector('[name="Start"]').value = info.dateStr + "T08:00";
            document.querySelector('[name="End"]').value = info.dateStr + "T09:00";
            modal.show();
        },

        eventClick: function(info) {
            openEditModal(info.event);
        },

        eventDidMount: function(info) {
            if (info.event.extendedProps.isRecurring) {
                const titleEl = info.el.querySelector('.fc-event-main');
                if (titleEl) {
                    titleEl.innerHTML = "üîÅ " + info.event.title;
                }
                info.el.style.backgroundColor = "#ffd6e7";
                info.el.style.borderColor = "#ff80b3";
            }
        }
    });

    calendar.render();

    // ====================================
    // 2Ô∏è‚É£ DODAWANIE TRENINGU
    // ====================================

    document.getElementById('addEventForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const form = Object.fromEntries(new FormData(e.target));
        form.IsRecurring = document.getElementById('isRecurring').checked;

        if (form.IsRecurring) {
            form.RecurrenceInterval = document.getElementById('recurrenceInterval').value;
            form.RecurrenceDays = [...document.querySelectorAll('.weekday:checked')]
                .map(x => x.value)
                .join(',');
            form.RecurrenceEndDate = document.getElementById('recurrenceEndDate').value;
        }

        const res = await fetch('/Training/AddEvent', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(form)
        });

        if (res.ok) {
            bootstrap.Modal.getOrCreateInstance(document.getElementById('calendarAddEventModal')).hide();
            calendar.refetchEvents();
            loadRecurringPlans();
        }
    });

    // ====================================
    // 3Ô∏è‚É£ EDYCJA TRENINGU
    // ====================================

    function openEditModal(event) {
        const modal = new bootstrap.Modal(document.getElementById('editEventModal'));

        document.getElementById("editEventId").value = event.id;
        document.getElementById("editTitle").value = event.title;
        document.getElementById("editDescription").value = event.extendedProps.description || "";
        document.getElementById("editStart").value = event.startStr.substring(0,16);
        document.getElementById("editEnd").value = event.endStr.substring(0,16);

        modal.show();
    }

    document.getElementById('editEventForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const form = Object.fromEntries(new FormData(e.target));

        const res = await fetch('/Training/UpdateEvent', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(form)
        });

        if (res.ok) {
            bootstrap.Modal.getOrCreateInstance(document.getElementById('editEventModal')).hide();
            calendar.refetchEvents();
        }
    });

    // ====================================
    // 4Ô∏è‚É£ USUWANIE
    // ====================================

    window.deleteSingleEvent = async function() {
        const id = document.getElementById("editEventId").value;

        if (!confirm("Czy na pewno usunƒÖƒá ten trening?")) return;

        await fetch('/Training/DeleteEvent', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(id)
        });

        bootstrap.Modal.getOrCreateInstance(document.getElementById('editEventModal')).hide();
        calendar.refetchEvents();
    }

    // ====================================
    // 5Ô∏è‚É£ CYKLICZNE PLANY
    // ====================================

    async function loadRecurringPlans() {
        const res = await fetch('/Training/GetRecurringPlans');
        const plans = await res.json();

        document.getElementById('cycleCount').innerText = plans.length;

        const container = document.getElementById('recurringList');
        container.innerHTML = "";

        if (plans.length === 0) {
            container.innerHTML = "<p class='text-muted'>Brak cyklicznych plan√≥w.</p>";
            return;
        }

        plans.forEach(p => {
            const days = p.recurrenceDays ? p.recurrenceDays.replace(/,/g, ", ") : "-";

            container.innerHTML += `
                <div class="card p-3 mb-2 shadow-sm border-pink">
                    <div class="d-flex justify-content-between">
                        <div>
                            <strong>${p.title}</strong><br/>
                            <span class="text-muted">${p.recurrenceInterval} ‚Ä¢ ${days} ‚Ä¢ do ${p.recurrenceEndDate?.substring(0,10)}</span>
                        </div>

                        <button class="btn btn-outline-danger btn-sm" onclick="deleteCycle('${p.recurrenceGroupId}')">Usu≈Ñ</button>
                    </div>
                </div>
            `;
        });
    }

    loadRecurringPlans();

    window.deleteCycle = async function(groupId) {
        if (!confirm("Czy na pewno usunƒÖƒá ca≈Çy cykl?")) return;

        await fetch('/Training/DeleteRecurrence', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(groupId)
        });

        calendar.refetchEvents();
        loadRecurringPlans();
    }
});
</script>